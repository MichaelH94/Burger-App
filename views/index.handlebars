
  <div class="container text-center">
    <h1>Eat-Da-Burger!</h1>
  <h3>Click on a burger to devour it!</h3>
  <br>
    <div class="row">
      <div class="col s6">
        <h2>Devour These!</h2>
        {{#each burgers}}
          {{#unless this.devoured}}
            <div>
              <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
                <button type="submit" class='ready'> {{this.burger_name}}</button>
              </form>
            </div>
          {{/unless}}
        {{/each}}
      </div>

      <div class="col s6">
        <h2>Already Devoured:</h2>
        {{#each burgers}}
          {{#if this.devoured}}
            <div class='devoured'>
              <div>
                {{this.burger_name}}
              </div>
            </div>
          {{/if}}
        {{/each}}
      </div>
    </div>
  </div>
<br>
<br>
<div class="container text-center">
  <h2>Add a new burger!</h2>
  <h5>Just enter the burger's name and get it ready for devouring!</h5>
  <div class="col-6-md text-center">
    <form action="/burgers" method="POST">
      <input type="text" id="name" name="burger_name" class="text-center">
      <button type="submit" class="btn btn-success">Add Burger</button>
    </form>
  </div>
</div>

